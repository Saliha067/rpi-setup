# Fail2ban Configuration
# Managed by Ansible - Do not edit manually

[DEFAULT]
# Ban for 1 hour
bantime = 3600
# 5 failures within 10 minutes
findtime = 600
maxretry = 5
# Use UFW for banning
banaction = ufw

[sshd]
enabled = true
port = {{ ssh_port }}
filter = sshd
logpath = /var/log/auth.log
maxretry = 3
bantime = 3600
